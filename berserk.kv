#:import Line kivy.graphics.Line
#:import Window kivy.core.window.Window
#:set CARD_SIDE_SIZE Window.width*0.084375

<MainField>:
    size_hint: None, None
    size_hint_x: None
    size_hint_y: None

<Vertical>:
    pts: [(Window.width*0.25 + i*CARD_SIDE_SIZE, Window.height*0.03+6*CARD_SIDE_SIZE,  Window.width*0.25 + i*CARD_SIDE_SIZE, Window.height*0.03) for i in range(6)]
    canvas:
        Color:
            rgba: 1,1,1,0.5
    on_parent:
        for i in range(0, len(root.pts)): self.canvas.add(Line(points=root.pts[i:i+1]))

<Horizontal>:
    pts: [(Window.width*0.25,  Window.height*0.03 + i*CARD_SIDE_SIZE,  Window.width*0.672,  Window.height*0.03 + i*CARD_SIDE_SIZE) for i in range(7)]
    canvas:
        Color:
            rgba: 1,1,1,0.5
    on_parent:
        for i in range(0, len(root.pts)): self.canvas.add(Line(points=root.pts[i:i+1]))

<MoveMark>:
    canvas:
        Color:
            rgba: 1,0,0,1
        Ellipse:
            pos: self.x-10, self.y-10
            size: self.z, self.z
ScrollView:
    canvas:
        Color:
            rgba: 1, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.x+10, self.y+10

